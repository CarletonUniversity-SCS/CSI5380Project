  <servlet-mapping>
    <servlet-name>GetProductListServlet</servlet-name>
    <url-pattern>/getProductlist.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetProductDetailsServlet</servlet-name>
    <servlet-class>edu.carleton.comp.cdstore.controllers.GetProductDetailsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetProductDetailsServlet</servlet-name>
    <url-pattern>/getDetails.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddToCartServlet</servlet-name>
    <servlet-class>edu.carleton.comp.cdstore.cookies.AddToCart</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddToCartServlet</servlet-name>
    <url-pattern>/addtocart.do</url-pattern>
  </servlet-mapping>
   <servlet>
    <servlet-name>RemoveCartItemServlet</servlet-name>
    <servlet-class>edu.carleton.comp.cdstore.cookies.RemoveCartItem</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RemoveCartItemServlet</servlet-name>
    <url-pattern>/deleteCartItems.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ModifyQuantityServlet</servlet-name>
    <servlet-class>edu.carleton.comp.cdstore.cookies.ModifyQuantity</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ModifyQuantityServlet</servlet-name>
    <url-pattern>/changeCartItems.do</url-pattern>
  </servlet-mapping>
 <servlet>
    <servlet-name>GetShippingMethodServlet</servlet-name>
    <servlet-class>edu.carleton.comp.cdstore.controllers.GetShippingMethodController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetShippingMethodServlet</servlet-name>
    <url-pattern>/shipping.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GetPriceDetailsServlet</servlet-name>
    <servlet-class>edu.carleton.comp.cdstore.controllers.GetPriceDetailsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetPriceDetailsServlet</servlet-name>
    <url-pattern>/pricedetails.do</url-pattern>
  </servlet-mapping>
   <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
</web-app>
