    <servlet-class>edu.carleton.comp.cdstore.cookies.CookieController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CookieServlet</servlet-name>
    <url-pattern>/cookies.do</url-pattern>
  </servlet-mapping>    
  <servlet>
    <servlet-name>MaintainSession</servlet-name>
    <servlet-class>edu.carleton.comp.cdstore.sessionmanager.MaintainSession</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MaintainSession</servlet-name>
    <url-pattern>/keepsession.do</url-pattern>
  </servlet-mapping>
   <servlet>
